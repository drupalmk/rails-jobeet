<% content_for :styles do %>
    <%= stylesheet_link_tag "jobs", :media => "all" %>
<% end %>
<div id="jobs">
  <% @categories.each do |category| %>
    <div class="category_<%= category.name %>">
        <div class="category">
          <div class="feed">
            <a href="">Feed</a>
          </div>
          <h1><%= category.name %></h1>
        </div>
        <%= render "list", :jobs => category.active_jobs  %>
    </div>
   <% end %>
</div>