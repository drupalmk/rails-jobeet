<h1>Listing jobs</h1>

<table>
  <tr>
    <th>Job type</th>
    <th>Company</th>
    <th>Logo</th>
    <th>Url</th>
    <th>Position</th>
    <th>Location</th>
    <th>Description</th>
    <th>How to apply</th>
    <th>Is public</th>
    <th>Is activated</th>
    <th>Email</th>
    <th>Created at</th>
    <th>Updated at</th>
    <th>Expires at</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @jobs.each do |job| %>
  <tr>
    <td><%= job.job_type %></td>
    <td><%= job.company %></td>
    <td><%= job.logo %></td>
    <td><%= job.url %></td>
    <td><%= job.position %></td>
    <td><%= job.location %></td>
    <td><%= job.description %></td>
    <td><%= job.how_to_apply %></td>
    <td><%= job.is_public %></td>
    <td><%= job.is_activated %></td>
    <td><%= job.email %></td>
    <td><%= job.created_at %></td>
    <td><%= job.updated_at %></td>
    <td><%= job.expires_at %></td>
    <td><%= link_to 'Show', job %></td>
    <td><%= link_to 'Edit', edit_job_path(job) %></td>
    <td><%= link_to 'Destroy', job, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

